//
org 0000h
	mov tmod ,#20h
	mov th1,-12d
	mov scon,#50h
	again: setb tr1
	jb p1.0,LEDON
	mov dptr,#message2
	l2: clr a
	movc a,@a+dptr
	jz exit
	acall serial
	inc dptr
	sjmp l2
	clr tr1
	exit: sjmp again
	LEDON : mov dptr,#message1
	l1: clr a
	movc a,@a+dptr
	jz exit
	acall serial
	inc dptr
	sjmp l1
	serial: mov sbuf,a
 	here: jnb ti,here
	clr ti
	ret
	
	org 0300h
		message1: db" LEDON ",0
		message2: db" LEDOFF ",0
				
	end
