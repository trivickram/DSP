clc
clear all;
close all;
n=[0:149];
x1=cos(2*pi*n/10);
N=2048;
X=zeros(1,N);
for k=1:N
    X(k)=abs(sum(x1 .*exp(-1i*2*pi*(k-N/2)*[0:149]/N)));
end

X=[X(N/2+1:end) X(1:N/2)];
F=[-N/2:N/2-1]/N;
plot(F,X);
