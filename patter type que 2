// 
org 0000h
	again : mov p1,#00000000b
	acall delay
	mov p1,#10000001b
	acall delay
	mov p1,#00000000b
	acall delay
	mov p1,#01000010b
	acall delay
	mov p1,#00000000b
	acall delay
	mov p1,#00100100b
	acall delay
	mov p1,#00000000b
	acall delay
	mov p1,#00011000b
	acall delay
	sjmp again
	
	delay: mov r0,#0ffh
	l2: mov r1,#0ffh
	l1: mov r2,#0ffh
	here: djnz r2,here
	djnz r1,l1
	djnz r0,l2
	ret
	
	end
